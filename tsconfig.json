{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@globalStyles/*": [
        "src/assets/styles/*"
      ],
      "@components": [
        "src/components/*"
      ],
      "@layout": [
        "src/layout/*"
      ],
      "@pages": [
        "src/pages/*"
      ],
      "@services": [
        "src/shared/services/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "next.config.js",
    "bundles",
    "coverage"
  ],
  "include": [
    "types/**/*.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/VetifyInput/index.js",
    ".next/types/**/*.ts"
  ]
}
